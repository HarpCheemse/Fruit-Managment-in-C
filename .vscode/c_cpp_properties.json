{
    "version": 4,
    "configurations": [
        {
            "name": "MSYS2",
            "includePath": [
                "${workspaceFolder}/**",  // Include all workspace files
                "C:/msys64/mingw64/include",  // Standard include path for MinGW
                "C:/msys64/mingw64/include/SDL2",  // If you're using SDL2
                "C:/msys64/mingw64/lib/gcc/x86_64-w64-mingw32/14.2.0/include"  // GCC-specific include path
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "compilerPath": "C:/msys64/mingw64/bin/g++.exe",  // Path to the g++ compiler
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "windows-gcc-x64"
        }
    ]
}
